{% macro newImageMedia(media) %}
    <div class="media-entry">
        <span>New Image Media</span>
        <a href="#" class="remove-media-entry">
            <i class="far fa-trash-alt fs-5"></i>
        </a>
        <div class="field align-items-center">
            {{ form_label(media.image) }} {{ form_widget(media.image) }}
        </div>
        {{ form_errors(media.image) }}
        <div class="field align-items-center">
            {{ form_label(media.altText) }} {{ form_widget(media.altText) }}
        </div>
        <hr>
    </div>
{% endmacro %}

